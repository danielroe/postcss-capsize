{
  "name": "postcss-capsize",
  "version": "0.3.0",
  "description": "PostCSS plugin to inject capsize font metrics",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "font",
    "capsize",
    "metrics"
  ],
  "repository": "danielroe/postcss-capsize",
  "license": "MIT",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "lib/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf lib/*",
    "compile": "siroc build",
    "lint": "yarn lint:all:eslint && yarn lint:all:prettier",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "yarn husky install && yarn build",
    "prepublishOnly": "yarn pinst --disable && yarn lint && yarn test",
    "release": "release-it",
    "test": "yarn test:unit",
    "test:unit": "vitest",
    "postinstall": "yarn husky install",
    "postpublish": "yarn pinst --enable"
  },
  "dependencies": {
    "@capsizecss/core": "^3.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "c8": "^7.11.0",
    "codecov": "^3.8.3",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "esbuild": "0.14.27",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expect-type": "^0.13.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "pinst": "^3.0.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "release-it": "^14.13.1",
    "semver": "^7.3.5",
    "siroc": "^0.16.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.7.7"
  },
  "peerDependencies": {
    "postcss": "^8"
  },
  "packageManager": "yarn@3.2.0"
}
