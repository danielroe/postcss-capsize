{
  "name": "postcss-capsize",
  "version": "0.3.0",
  "description": "PostCSS plugin to inject capsize font metrics",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "font",
    "capsize",
    "metrics"
  ],
  "repository": "danielroe/postcss-capsize",
  "license": "MIT",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "dist/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "unbuild",
    "postinstall": "husky install",
    "lint": "npm run lint:all:eslint && npm run lint:all:prettier",
    "lint:all:eslint": "npm run lint:eslint -- --ext .js,.ts .",
    "lint:all:prettier": "npm run lint:prettier -- \"**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "pinst --disable && npm run lint && npm run test",
    "postpublish": "pinst --enable",
    "release": "release-it",
    "test": "npm run test:unit",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@capsizecss/core": "^3.1.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^6.0.0",
    "@rollup/pluginutils": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "c8": "^7.14.0",
    "conventional-changelog-conventionalcommits": "^6.0.0",
    "esbuild": "0.18.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect-type": "^0.16.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0",
    "semver": "^7.5.1",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vite": "^4.3.9",
    "vitest": "^0.32.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.24"
  },
  "packageManager": "pnpm@8.6.2"
}
