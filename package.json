{
  "name": "postcss-capsize",
  "version": "0.3.0",
  "description": "PostCSS plugin to inject capsize font metrics",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "font",
    "capsize",
    "metrics"
  ],
  "repository": "danielroe/postcss-capsize",
  "license": "MIT",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "lib/index.d.ts",
    "!**/*.map"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf lib/*",
    "compile": "siroc build",
    "lint": "yarn lint:all:eslint && yarn lint:all:prettier",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.ts .",
    "lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepare": "yarn husky install && yarn build",
    "prepublishOnly": "yarn pinst --disable && yarn lint && yarn test",
    "release": "release-it",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "postinstall": "yarn husky install",
    "postpublish": "yarn pinst --enable"
  },
  "dependencies": {
    "@capsizecss/core": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@jest/test-sequencer": "^27.3.1",
    "@release-it/conventional-changelog": "^3.3.0",
    "@siroc/eslint-config": "^0.2.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "codecov": "^3.8.3",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "esbuild": "0.13.14",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "expect-type": "^0.13.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-environment-node": "^27.3.1",
    "lint-staged": "^11.2.6",
    "pinst": "^2.1.6",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "release-it": "^14.11.8",
    "semver": "^7.3.5",
    "siroc": "^0.16.0",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "postcss": "^8"
  },
  "packageManager": "yarn@3.1.0"
}
