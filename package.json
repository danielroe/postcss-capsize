{
  "name": "postcss-capsize",
  "version": "0.4.0",
  "packageManager": "pnpm@10.11.0",
  "description": "PostCSS plugin to inject capsize font metrics",
  "author": {
    "name": "Daniel Roe",
    "email": "daniel@roe.dev",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielroe/postcss-capsize.git"
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "font",
    "capsize",
    "metrics"
  ],
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "!**/*.map",
    "dist/**/*",
    "dist/index.d.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "pnpm lint:all:eslint",
    "lint:all:eslint": "pnpm lint:eslint -- .",
    "lint:eslint": "eslint --fix",
    "prepare": "simple-git-hooks && pnpm build",
    "prepublishOnly": "pnpm lint && pnpm test",
    "release": "bumpp && npm publish",
    "test": "pnpm test:unit",
    "test:unit": "vitest"
  },
  "peerDependencies": {
    "postcss": "^8.5.3"
  },
  "dependencies": {
    "@capsizecss/core": "^4.1.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@vitest/coverage-v8": "^3.1.4",
    "bumpp": "^10.1.1",
    "eslint": "^9.27.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.4"
  },
  "lintStaged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "yarn lint:eslint"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
